<div class="container loginBkg align-middle">
  <div class="row justify-content-center">
    <div id="loginContainer" class="col-md-4 col-md-offset-3 bg-white align-items-center">
      <div class="logo">
        <p>
          <img src="/assets/images/logo_codePin.png" width="235" alt="CodePin" />
        </p>
      </div>
      <form class="signup">
        <div class="form-group">
          <input type="text" class="form-control" id="name-input" placeholder="Full Name">
        </div>
        <div class="form-group">
          <input type="email" class="form-control" id="email-input" placeholder="Email">
        </div>
        <div class="form-group">
          <input type="password" class="form-control" id="password-input" placeholder="Password">
        </div>
        <div style="display: none" id="alert" class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Error:</span>
          <span class="msg"></span>
        </div>
        <p class="text-right">
          <a href="/login">login</a>
        </p>
        <div class="text-center">
          <button type="submit" class="btn btn-default login">Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script type="text/javascript" src="/assets/js/signup.js"></script>