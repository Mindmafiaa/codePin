<div class="container loginBkg align-middle">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-10 formContainer">
            <h4 class="modal-title font-weight-bold pb-3 mb-3 border-bottom">Edit your pin</h4>
            <form id="editForm" data-type="{{pin.id}}">
                {{!-- row 1 --}}
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="title-edit" value="{{pin.title}}" required>
                        </div>      
                    </div>
                </div>
                {{!-- row 2 --}}
                <div class="row">
                    <div class="col-sm-8">
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control" id="description-edit" rows="3" required>{{pin.description}}</textarea>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="language">Language</label>
                            <select class="form-control" id="language-edit" value ="{{pin.language}}" required>
                                <option value="" selected disabled>Language</option>
                                <option value="html">HTML</option>
                                <option value="css">CSS</option>
                                <option value="javascript">JavaScript</option>
                                <option value="python">Python</option>
                                <option value="php">PHP</option>
                                <option value="server-side">Server-side</option>
                                <option value="database">Database</option>                                        
                            </select>
                        </div>
                    </div>
                </div>
                {{!-- row 3 --}}
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="snippet">Code Snippet</label>
                            <textarea class="form-control" id="content-edit" rows="4" required>{{pin.content}}</textarea>
                        </div>  
                    </div>
                </div>
                {{!-- row 4 --}}
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="website">Wedsite</label>
                            <input class="form-control" id="link-edit" rows="2" value="{{pin.link}}" required>
                        </div>
                    </div>
                </div>
                {{!-- row 5 users --}}
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <input class="form-control" id="user-id-edit" rows="2" value="{{pin.User.id}}" required>
                        </div>
                    </div>
                </div>
                {{!-- footer --}}
                <div class="row mt-3 mb-3">
                    <div class="col-6 text-left">
                        <button type="button" class="btn btn-secondary" id="deleteButton"><i class="fas fa-trash"></i></button>
                    </div>
                    <div class="col-6 text-right">
                        <button type="submit" id="editButton" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>